{
    "$schema": "https://raw.githubusercontent.com/microsoft/vcpkg-tool/main/docs/vcpkg.schema.json",
    "name": "hello-world",
    "version-string": "0.0.1",
    "$dependencies": [
        "commonlibsse-ng",
        "simpleini",
        "nlohmann-json"
    ],
    "features": {
        "plugin": {
            "description": "Build the SKSE plugin.",
            "dependencies": [
                "commonlibsse-ng",
                "simpleini",
                "nlohmann-json",
                "articuno"
            ]
        },
        "scripts": {
            "description": "Install Papyrus sources for this program to develop on top of it."
        },
        "scripts-dev": {
            "description": "Install Papyrus sources necessary to develop scripts for this plugin.",
            "dependencies": [
                "bethesda-skyrim-scripts",
                {
                    "name": "skse",
                    "default-features": false,
                    "features": [
                        "scripts"
                    ]
                }
            ]
        },
        "tests": {
            "description": "Build tests for the SKSE plugin.",
            "dependencies": [
                {
                    "name": "hello-world",
                    "default-features": false,
                    "features": [
                        "plugin"
                    ]
                },
                "catch2"
            ]
        }

    },
    "default-features": [
        "scripts-dev",
        "plugin",
        "tests"
    ]

}
